<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techstock.MenuPrincipalController">
   <children>
      <!-- Encabezado -->
      <Label prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: #18529D; -fx-text-fill: #FFFFFF; -fx-font-size: 20px;" text="Menu principal">
         <font>
            <Font name="System Bold" size="20" />
         </font>
      </Label>

      <!-- Información del usuario -->
      <HBox layoutX="20.0" layoutY="60.0" spacing="10">
         <Label text="Usuario:" textFill="#000000">
            <font>
               <Font size="16" />
            </font>
         </Label>
         <Label fx:id="usuarioLabel" textFill="#000000">
            <font>
               <Font size="16" />
            </font>
         </Label>
         <Button fx:id="cerrarSesionButton" mnemonicParsing="false" onAction="#cerrarSesionAction" style="-fx-background-color: #FF0000; -fx-text-fill: #FFFFFF;" text="Cerrar sesión">
            <font>
               <Font size="14" />
            </font>
         </Button>
      </HBox>

      <!-- Botones de Acceso Rápido -->
      <VBox layoutX="20.0" layoutY="120.0" spacing="10">
         <Button fx:id="consultarSoftwareButton" mnemonicParsing="false" onAction="#consultarSoftwareAction" style="-fx-background-color: #28AD56; -fx-text-fill: #FFFFFF;" text="Consultar software">
            <font>
               <Font size="14" />
            </font>
         </Button>
         <Button fx:id="consultarCentrosComputoButton" mnemonicParsing="false" onAction="#consultarCentrosComputoAction" style="-fx-background-color: #28AD56; -fx-text-fill: #FFFFFF;" text="Consultar centros de computo">
            <font>
               <Font size="14" />
            </font>
         </Button>
         <Button fx:id="consultarEquiposComputoButton" mnemonicParsing="false" onAction="#consultarEquiposComputoAction" style="-fx-background-color: #28AD56; -fx-text-fill: #FFFFFF;" text="Consultar equipos de computo">
            <font>
               <Font size="14" />
            </font>
         </Button>
         <Button fx:id="consultarPerifericosButton" mnemonicParsing="false" onAction="#consultarPerifericosAction" style="-fx-background-color: #28AD56; -fx-text-fill: #FFFFFF;" text="Consultar periféricos">
            <font>
               <Font size="14" />
            </font>
         </Button>
      </VBox>

      <!-- Opciones de Administración -->
      <VBox layoutX="450.0" layoutY="120.0" spacing="10">
         <Button fx:id="administrarUsuariosButton" mnemonicParsing="false" onAction="#administrarUsuariosAction" style="-fx-background-color: #18529D; -fx-text-fill: #FFFFFF;" text="Administrar usuarios">
            <font>
               <Font size="14" />
            </font>
         </Button>
         <Button fx:id="editarPerfilButton" mnemonicParsing="false" onAction="#editarPerfilAction" style="-fx-background-color: #18529D; -fx-text-fill: #FFFFFF;" text="Editar perfil">
            <font>
               <Font size="14" />
            </font>
         </Button>
      </VBox>
   </children>
</AnchorPane>
