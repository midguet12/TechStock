<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="442.0" prefWidth="682.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techstock.views.software.softwareinstalado.EquiposSoftwareInstaladoController">

    <Label fx:id="softwareNombreLabel" prefHeight="27.0" prefWidth="790.0" style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-size: 18px;" text="Equipos de Computo con el Software">
        <font>
            <Font name="System Bold" size="18" />
        </font>
    </Label>
    <TableView fx:id="tablaEquipo" editable="true" layoutX="44.0" layoutY="102.0" prefHeight="234.0" prefWidth="649.0">
        <columns>
            <TableColumn fx:id="noSerie" prefWidth="96.0" text="No. De Serie" />
            <TableColumn fx:id="marca" minWidth="2.0" prefWidth="83.0" text="Marca" />
            <TableColumn fx:id="almacenamiento" prefWidth="100.0" text="Almacenamiento" />
            <TableColumn fx:id="memoria" prefWidth="86.0" text="Memoria Ram" />
            <TableColumn fx:id="procesador" prefWidth="122.0" text="Procesador" />

        </columns>
    </TableView>


    <Button fx:id="instalarButton" layoutX="220.0" layoutY="376.0" mnemonicParsing="false" onAction="#instalarAction" style="-fx-background-color: #007BFF; -fx-text-fill: white;" text="Instalar" />
    <Button layoutX="420.0" layoutY="376.0" mnemonicParsing="false" style="-fx-background-color: #007BFF; -fx-text-fill: white;" text="Eliminar" />
    <Button fx:id="desinstalarButton" layoutX="315.0" layoutY="376.0" mnemonicParsing="false" onAction="#desinstalarAction" style="-fx-background-color: #007BFF; -fx-text-fill: white;" text="Desinstalar" />

    <Button fx:id="listaSoftwareButton" layoutX="80.0" layoutY="375.0" onAction="#listasoftwareAction" style="-fx-text-fill: #007BFF; -fx-border-color: #007BFF;" text="Lista de software" />
    <ComboBox fx:id="centroComputoComboBox" layoutX="240.0" layoutY="49.0" prefHeight="26.0" prefWidth="304.0" />
    <Label layoutX="46.0" layoutY="53.0" text="Seleccione centro de computo:" />
    <Button fx:id="buscarButton" layoutX="571.0" layoutY="49.0" mnemonicParsing="false" onAction="#buscarAction" text="Buscar" />
   
</AnchorPane>
